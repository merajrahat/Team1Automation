<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">

<suite name="Selenium Test Suite" parallel="false">

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="https://www.slickdeals.net"/>
    <parameter name="platform" value="windows"/>

    <parameter name="cloud" value="false"/>
    <parameter name="envName" value="browserstack"/>
    <parameter name="browserVersion" value="latest-beta"/>

    <test name="Automation tests">
        <!--<groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>-->
        <classes>
            <class name="net.slickdealstest.HomePageValidations"/>
            <class name="net.slickdealstest.InstagramPageValidation"/>
            <class name="net.slickdealstest.LoginPageValidations"/>
            <class name="net.slickdealstest.ProfilePageValidation"/>
            <class name="net.slickdealstest.RegisterPageValidation"/>

        </classes>
    </test>
</suite>